<idea-plugin>
    <id>com.haz.merge-ints-plugin</id>
    <name>Interface merger</name>
    <vendor email="saltpan@gmail.com"/>
    <description>This plugin merge interface with it's implementation</description>
    <extensions defaultExtensionNs="com.intellij"/>
    <actions>
        <action id="MergePlugin.merge" class="MergeAction" text="Merge with Interface" description="Merge service implementation with interface">
            <keyboard-shortcut keymap="$default" first-keystroke="control alt G"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>